<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root headerText="%connection.title" type="DialogPane" xmlns="http://javafx.com/javafx/10.0.2-internal"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.github.sylvainmaillard.gredis.gui.SavedConnectionDialogPane">
    <content>
        <GridPane hgap="10.0" vgap="5.0">
            <TextField fx:id="hostTextBox" text="localhost" GridPane.columnIndex="1"/>
            <TextField fx:id="portTextBox" text="6379" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <PasswordField fx:id="authTextBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="%connection.host"/>
            <Label text="%connection.port" GridPane.rowIndex="1"/>
            <Label text="%connection.auth" GridPane.rowIndex="2"/>
        </GridPane>
    </content>
    <graphic>
        <ImageView>
            <Image url="@link.png"/>
        </ImageView>
    </graphic>
    <ButtonType fx:constant="OK"/>
    <ButtonType fx:constant="CANCEL"/>
</fx:root>
