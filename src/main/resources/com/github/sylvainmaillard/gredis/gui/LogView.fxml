<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.TextFlow?>
<fx:root type="HBox" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.sylvainmaillard.gredis.gui.LogView"
            prefHeight="200.0" prefWidth="600.0">
    <ScrollPane fx:id="logContainer" fitToHeight="true" fitToWidth="true" prefHeight="100.0" prefWidth="250.0" HBox.hgrow="ALWAYS">
        <TextFlow fx:id="logTextArea" />
    </ScrollPane>
    <ToolBar orientation="VERTICAL" prefHeight="100.0" prefWidth="53.0">
        <Button mnemonicParsing="false" text="%log.clear" onAction="#clear"/>
    </ToolBar>

</fx:root>
