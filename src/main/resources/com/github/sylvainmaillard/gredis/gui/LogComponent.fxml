<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="HBox" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.sylvainmaillard.gredis.gui.LogComponent">
      <ScrollPane fx:id="logContainer" fitToHeight="true" fitToWidth="true" prefHeight="100.0" prefWidth="250.0" HBox.hgrow="ALWAYS">
          <TextFlow fx:id="logTextArea" />
      </ScrollPane>
      <ToolBar orientation="VERTICAL" prefHeight="100.0" prefWidth="53.0">
          <Button mnemonicParsing="false" text="%log.clear" onAction="#clear"/>
      </ToolBar>
</fx:root>
